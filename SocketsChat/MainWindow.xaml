<Window x:Class="SocketsChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chat"
        x:Name="Window"
        SizeToContent="WidthAndHeight"
        MinHeight="350" MinWidth="525">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Connect to: </Label>
            <TextBox x:Name="ConnectIp" HorizontalAlignment="Left" TextWrapping="Wrap" Text="127.0.0.1"
                     VerticalAlignment="Top" />
            <Label>:</Label>
            <TextBox x:Name="ConnectPort" HorizontalAlignment="Left" TextWrapping="Wrap" Text="3000"
                     VerticalAlignment="Top" /></StackPanel>
        <Label>Chat</Label>
        <Border BorderThickness="2" BorderBrush="LightGray">
            <RichTextBox x:Name="ChatBox" IsReadOnly="True" MaxHeight="300" MaxWidth="600"
                         VerticalScrollBarVisibility="Auto" IsDocumentEnabled="False"/>
        </Border>
        <DockPanel>
            <Button Command="{Binding ElementName=Window, Path=SendCommand}" Width="55"
                    Content="Send" DockPanel.Dock="Right"/>
            <TextBox x:Name="MessageText"  />
        </DockPanel>
    </StackPanel>
</Window>
