<Window x:Class="SocketsChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chat"
        x:Name="Window"
        SizeToContent="WidthAndHeight"
        MinHeight="350" MinWidth="525">
    <StackPanel>
        <Label>Connect</Label>
        <TextBox x:Name="connectIP" HorizontalAlignment="Left" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top"/>
        <TextBox x:Name="connectPort" HorizontalAlignment="Left" TextWrapping="Wrap" Text="3000" VerticalAlignment="Top"/>
        <Label>Chat</Label>
        <Border BorderThickness="2" BorderBrush="DarkCyan">
            <TextBlock x:Name="chat" HorizontalAlignment="Left" VerticalAlignment="Top" MaxHeight="200"/>
        </Border>
        <Button Command="{Binding ElementName=Window, Path=SendCommand}">send</Button>
    </StackPanel>
</Window>
