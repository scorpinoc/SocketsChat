<Window x:Class="SocketsChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chat"
        x:Name="Window"
        SizeToContent="WidthAndHeight"
        MinHeight="350" MinWidth="525">
    <StackPanel>
        <Label Content="{Binding ElementName=Window, Path=ServerAdress}"
               ContentStringFormat="{}Server openned on {0}."/>
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding ElementName=Window, Path=ConnectCommand}" Content="Connect to:"/>
            <Label Content="{Binding ElementName=Window, Path=ConnectEndPoint}"/>
        </StackPanel>
        <Label Content="Chat"/>
        <Border BorderThickness="2" BorderBrush="LightGray">
            <RichTextBox x:Name="ChatBox" IsReadOnly="True" MaxHeight="300" MaxWidth="600"
                         VerticalScrollBarVisibility="Auto" IsDocumentEnabled="False"/>
        </Border>
        <DockPanel>
            <Button Command="{Binding ElementName=Window, Path=SendCommand}" Width="55"
                    Content="Send" DockPanel.Dock="Right"/>
            <TextBox x:Name="MessageText"  />
        </DockPanel>
    </StackPanel>
</Window>
